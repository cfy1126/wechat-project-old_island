.container{
    width:600rpx;
    height:80rpx;
    background-color: #f7f7f7;
    border-radius:2px;
    display:inline-flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  
  .icon{
    height:80rpx;
    width:80rpx;
  }

.icon:nth-child(1){
    transform: rotate(180deg);
}
  
  .title{
    font-size:28rpx;
  }